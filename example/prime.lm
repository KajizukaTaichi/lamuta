let isPrime = fn(n -> {
    const errmsg: text = "not a prime number";
    if (n < 2) {
        fault errmsg
    } else {
        for i in (2 ~ (n ^ 0.5 + 1)) {
            if (n % i == 0) {
                fault errmsg
            }
        }
    };
    "just a prime number"
});

print "Prime Check\n";
let flag = 1;
while (flag == 1) {
    let num = input(">>> ") as number;
    print num, " is ", { if isPrime(num) it else err }, "\n";
}
